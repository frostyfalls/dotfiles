snippet sh
	#!/bin/sh


snippet safe
	set -eu


snippet if
	if ${1::}; then
		${0::}
	fi
snippet iftest
	if [ ${1:-z "\$1"} ]; then
		${0::}
	fi
snippet wh
	while [ $1 ]; do
		${0::}
	done
snippet whtrue
	while :; do
		${0::}
	done
snippet seq
	${1:i}=${2:0}
	while [ "\$${1:i}" -le ${3:5} ]; do
		${0::}
		${1:i}=\$((${1:i}+1))
	done
snippet for
	for ${1:x} in ${2:y}; do
		${0::}
	done
snippet func
	${1:func}() {
		${0::}
	}
# vim:nofoldenable
