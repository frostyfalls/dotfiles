#!/bin/sh
# shellcheck disable=SC2043

# {{{ variables
terminal="footclient"
lock_cmd="waylock -ignore-empty-password -init-color 0x121212 -input-color 0x222222 -fail-color 0x900000 -fork-on-lock"
# }}}

# {{{ themes
riverctl xcursor-theme "Adwaita"
xrdb -merge "$XDG_CONFIG_HOME/xorg/xresources"
riverctl background-color 0x222222
wbg "$XDG_DATA_HOME/wallpaper.jpg" &
# }}}

# {{{ autoruns
pipewire &
pipewire-pulse &
wireplumber &
kanshi &
foot --server &
swayidle -w \
    timeout 300 "$lock_cmd" \
    timeout 600 "loginctl suspend" &
if [ "$(hostname)" = "styx" ]; then
    mpd --no-daemon &
fi
yambar &
mako &
gpg-agent --server --no-detach &
# }}}

# {{{ inputs
riverctl set-repeat 50 300
riverctl hide-cursor when-typing enabled
for input in "pointer-1452-657-bcm5974"; do
    riverctl input "$input" disable while-typing enabled
    riverctl input "$input" natural-scroll enabled
    riverctl input "$input" tap enabled
done
# }}}

# {{{ rules
riverctl rule-add ssd
for app in "org.qutebrowser.qutebrowser" "Firefox"; do
    riverctl rule-add -app-id "$app" tags "$((1 << (2 - 1)))"
done
for app in "Signal" "vesktop"; do
    riverctl rule-add -app-id "$app" tags "$((1 << (4 - 1)))"
done
# }}}

# {{{ window management
riverctl default-layout wideriver
wideriver \
    --layout left \
    --layout-alt monocle \
    --stack even \
    --count-master 1 \
    --ratio-master 0.55 \
    --inner-gaps 4 \
    --outer-gaps 4 \
    --border-width 1 \
    --border-width-monocle 1 \
    --border-color-focused 0xfabd2f \
    --border-color-focused-monocle 0xfabd2f \
    --border-color-unfocused 0x3c3836 &
riverctl focus-follows-cursor normal
riverctl default-attach-mode bottom
# }}}

# {{{ mappings
# applications
riverctl map normal Super Return spawn "$terminal"
riverctl map normal Super P spawn "XDG_DATA_DIRS=$XDG_DATA_HOME/applications fuzzel"
riverctl map normal Super W spawn qutebrowser
riverctl map normal Super V spawn "$terminal pulsemixer"
riverctl map normal Super F spawn "$terminal lf"
riverctl map normal Super N spawn "$terminal newsraft"
riverctl map normal Super Q spawn "$terminal ncmpcpp"
riverctl map normal Super U spawn passget
riverctl map normal Super+Shift U spawn "passget -o"

# screenshot
riverctl map normal Super+Shift O spawn "screenshot -n -c -m full"
riverctl map normal Super+Shift P spawn "screenshot -n -c -m select"
riverctl map normal None Print spawn "screenshot -n -c -m full"
riverctl map normal Shift Print spawn "screenshot -n -c -m select"

# view actions
riverctl map-pointer normal Super BTN_LEFT move-view
riverctl map-pointer normal Super BTN_RIGHT resize-view
riverctl map normal Super+Shift Space toggle-float
riverctl map-pointer normal Super BTN_MIDDLE toggle-float
riverctl map normal Super+Shift F toggle-fullscreen
riverctl map normal Super+Shift C close

# focus/swap view
riverctl map normal Super J focus-view next
riverctl map normal Super K focus-view previous
riverctl map normal Super+Shift J swap next
riverctl map normal Super+Shift K swap previous
riverctl map normal Super+Shift Return zoom

# output
riverctl map normal Super Period focus-output next
riverctl map normal Super Comma focus-output previous
riverctl map normal Super+Shift Period send-to-output next
riverctl map normal Super+Shift Comma send-to-output previous

# master view
riverctl map normal Super H send-layout-cmd wideriver "--ratio -0.0125"
riverctl map normal Super L send-layout-cmd wideriver "--ratio +0.0125"
riverctl map normal Super+Shift H send-layout-cmd wideriver "--ratio -0.05"
riverctl map normal Super+Shift L send-layout-cmd wideriver "--ratio +0.05"
riverctl map normal Super I send-layout-cmd wideriver "--count +1"
riverctl map normal Super D send-layout-cmd wideriver "--count -1"

# layout
riverctl map normal Super T send-layout-cmd wideriver "--layout left"
riverctl map normal Super+Shift T send-layout-cmd wideriver "--layout top"
riverctl map normal Super M send-layout-cmd wideriver "--layout monocle"
riverctl map normal Super Space send-layout-cmd wideriver "--layout-toggle"
riverctl map normal Super B spawn "pkill yambar || yambar"

# session
riverctl map normal Control+Alt Delete exit
riverctl map normal Control+Alt L spawn "$lock_cmd"
riverctl map normal Super F12 spawn "$lock_cmd"

# tags
for i in $(seq 1 9); do
    tags=$((1 << (i - 1)))
    riverctl map normal Super "$i" set-focused-tags "$tags"
    riverctl map normal Super+Shift "$i" set-view-tags "$tags"
    riverctl map normal Super+Control "$i" toggle-focused-tags "$tags"
    riverctl map normal Super+Shift+Control "$i" toggle-view-tags "$tags"
done
all_tags=$(((1 << 32) - 1))
riverctl map normal Super 0 set-focused-tags "$all_tags"
riverctl map normal Super+Shift 0 set-view-tags "$all_tags"
riverctl map normal Super Tab focus-previous-tags

# passthrough mode
riverctl declare-mode passthrough
riverctl map normal Super+Shift Escape enter-mode passthrough
riverctl map passthrough Super+Shift Escape enter-mode normal

for mode in normal locked; do
    # volume
    riverctl map "$mode" None XF86AudioMute spawn "audioctl toggle-mute"
    riverctl map -repeat "$mode" None XF86AudioLowerVolume spawn "audioctl set-volume 5%-"
    riverctl map -repeat "$mode" None XF86AudioRaiseVolume spawn "audioctl set-volume 5%+"
    riverctl map "$mode" Super F9 spawn "audioctl toggle-mute"
    riverctl map -repeat "$mode" Super F10 spawn "audioctl set-volume 5%-"
    riverctl map -repeat "$mode" Super F11 spawn "audioctl set-volume 5%+"

    # media
    riverctl map -repeat "$mode" None XF86AudioPrev spawn "mediactl prev"
    riverctl map -repeat "$mode" None XF86AudioNext spawn "mediactl next"
    riverctl map "$mode" None XF86AudioPlay spawn "mediactl toggle"
    riverctl map "$mode" None XF86AudioStop spawn "mediactl stop"
    riverctl map -repeat "$mode" Super F5 spawn "mediactl prev"
    riverctl map -repeat "$mode" Super F6 spawn "mediactl next"
    riverctl map "$mode" Super F7 spawn "mediactl toggle"
    riverctl map "$mode" Super F8 spawn "mediactl stop"

    # brightness
    riverctl map -repeat "$mode" None XF86MonBrightnessDown spawn "brightctl set acpi_video0 10%-"
    riverctl map -repeat "$mode" None XF86MonBrightnessUp spawn "brightctl set acpi_video0 10%+"
    riverctl map -repeat "$mode" None XF86KbdBrightnessDown spawn "brightctl set smc::kbd_backlight 10%-"
    riverctl map -repeat "$mode" None XF86KbdBrightnessUp spawn "brightctl set smc::kbd_backlight 10%+"
    riverctl map "$mode" Shift XF86MonBrightnessDown spawn "brightctl set acpi_video0 0%"
    riverctl map "$mode" Shift XF86MonBrightnessUp spawn "brightctl set acpi_video0 100%"
    riverctl map "$mode" Shift XF86KbdBrightnessDown spawn "brightctl set smc::kbd_backlight 0%"
    riverctl map "$mode" Shift XF86KbdBrightnessUp spawn "brightctl set smc::kbd_backlight 100%"
done
# }}}
