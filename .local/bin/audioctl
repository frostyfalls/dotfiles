#!/bin/sh
# shellcheck disable=SC2015,SC2249

set -eu

DEFAULT_SINK="@DEFAULT_AUDIO_SINK@"
DEFAULT_SOURCE="@DEFAULT_AUDIO_SOURCE@"
AUDIO_LIMIT=1.0

case "${1:-}" in
set-volume) wpctl set-volume --limit="$AUDIO_LIMIT" "$DEFAULT_SINK" "$2" ;;
toggle-mic) wpctl set-mute "$DEFAULT_SOURCE" toggle ;;
toggle-mute) wpctl set-mute "$DEFAULT_SINK" toggle ;;
*) exit 1 ;;
esac
