# TODO(frosty): Create binds for more special keys

### Variables

set $mod Mod4

set $term footclient
set $lockscreen waylock -fork-on-lock -init-color 0x181818 -input-color 0x285577 -fail-color 0x900000

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

### Autostart

exec foot -s
exec mako
exec swayidle -w \
        timeout 600 '$lockscreen' \
        timeout 900 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
        before-sleep '$lockscreen'
exec wlsunset -l 27.9 -L -82.4

### Other options

font pango:Terminus 8
output * bg #181818 solid_color

default_border normal 1
default_floating_border normal 1
smart_borders on

floating_modifier $mod

workspace_layout tabbed
default_orientation auto

seat * {
    hide_cursor 10000
    hide_cursor when-typing enabled
    xcursor_theme Adwaita
}

### Input

input type:keyboard {
    repeat_delay 300
    repeat_rate 50
}

input type:touchpad {
    dwt enabled
    dwtp enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

### Window rules

for_window [app_id="qalculate-gtk"] floating enable
for_window [app_id="swayimg"] floating disable, border normal 1
for_window [shell="xwayland"] title_format "[XWayland] %title"

### Bar

bar {
    position top
    status_command i3status-rs
    separator_symbol |
    tray_output none
    colors {
        background #181818
        statusline #eeeeee
        separator #666666
    }
}

### Keybinds

bindsym $mod+Return exec $term
bindsym $mod+p exec fuzzel
bindsym $mod+u exec dm-pass

bindsym Mod1+Ctrl+l exec $lockscreen
bindsym $mod+Shift+r reload

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+b split horizontal
bindsym $mod+v split vertical
bindsym $mod+a focus parent

bindsym $mod+Shift+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+c kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+comma focus output left
bindsym $mod+period focus output right
bindsym $mod+Shift+comma move container to output left; focus output left
bindsym $mod+Shift+period move container to output right; focus output right

bindsym --locked XF86AudioMute exec volume toggle-mute
bindsym --locked XF86AudioLowerVolume exec volume down
bindsym --locked XF86AudioRaiseVolume exec volume up
bindsym --locked XF86AudioMicMute exec volume toggle-mic
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 10%+

bindsym Mod4+1 workspace $ws1
bindsym Mod4+2 workspace $ws2
bindsym Mod4+3 workspace $ws3
bindsym Mod4+4 workspace $ws4
bindsym Mod4+5 workspace $ws5
bindsym Mod4+6 workspace $ws6
bindsym Mod4+7 workspace $ws7
bindsym Mod4+8 workspace $ws8
bindsym Mod4+9 workspace $ws9
bindsym Mod4+0 workspace $ws10
bindsym Mod4+Shift+1 move container to workspace $ws1
bindsym Mod4+Shift+2 move container to workspace $ws2
bindsym Mod4+Shift+3 move container to workspace $ws3
bindsym Mod4+Shift+4 move container to workspace $ws4
bindsym Mod4+Shift+5 move container to workspace $ws5
bindsym Mod4+Shift+6 move container to workspace $ws6
bindsym Mod4+Shift+7 move container to workspace $ws7
bindsym Mod4+Shift+8 move container to workspace $ws8
bindsym Mod4+Shift+9 move container to workspace $ws9
bindsym Mod4+Shift+0 move container to workspace $ws10

bindsym Mod4+Tab workspace back_and_forth
bindsym Mod4+Shift+Tab move container to workspace back_and_forth

set $screenshot_mode "1: full | 2: select | 3: output"
mode $screenshot_mode bindsym {
    1 exec screenshot, mode default
    2 exec screenshot -s, mode default
    3 exec screenshot -o, mode default
    Escape mode default
}
bindsym Print mode $screenshot_mode

set $power_mode "1: lock | 2: exit | 3: poweroff | 4: reboot"
mode $power_mode bindsym {
    1 exec $lockscreen, mode default
    2 exit
    3 exec loginctl poweroff
    4 exec loginctl reboot
    Escape mode default
}
bindsym $mod+Shift+e mode $power_mode

set $passthrough_mode "passthrough"
mode $passthrough_mode bindsym {
    $mod+F11 mode default
}
bindsym $mod+F11 mode $passthrough_mode

### Includes

include hostname.d/`hostname`
